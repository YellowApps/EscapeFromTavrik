    splash.innerHTML = splashes[Math.floor(Math.random()*splashes.length) + 1];

    play.onclick = function(){
      var shell = WScript.CreateObject("WScript.Shell");
      shell.Run("game.hta");
      shell.AppActivate("game.hta");
      window.close();
    }

    bug.onclick = function(){
      location.href = "http://f0615718.xsph.ru/chat/group.php?id=eftbug&login=user" + new Date().getTime();
